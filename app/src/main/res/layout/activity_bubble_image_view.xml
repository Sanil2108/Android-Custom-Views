<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_bubble_image_view_root"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <sanilk.com.customviews.views.bubble_image_view.BubbleImageView
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_bubble_image_view_bubble"
        android:layout_height="50dp"></sanilk.com.customviews.views.bubble_image_view.BubbleImageView>


    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:text="Start"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_bubble_image_view_start"
        android:layout_height="wrap_content" />

</RelativeLayout>